<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="casa.derapps.tola.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_webviewFragment"
            app:destination="@id/webviewFragment" />
        <action
            android:id="@+id/action_mainFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentWebView"
            app:destination="@id/fragmentWebView" />
    </fragment>
    <fragment
        android:id="@+id/webviewFragment"
        android:name="casa.derapps.tola.WebviewFragment"
        android:label="WebviewFragment" />
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="casa.derapps.tola.NewsDetailsFragment"
        android:label="NewsDetailsFragment" />
    <fragment
        android:id="@+id/fragmentWebView"
        android:name="casa.derapps.tola.FragmentWebView"
        android:label="FragmentWebView" />
</navigation>